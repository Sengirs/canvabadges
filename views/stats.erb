<h2><a href="/"><img src="<%= @org.settings['image'] || "/organizations/default.png" %>" alt=""/></a> <%= @org.settings['name'] %> Badging Stats</h2>
<div class='row'>
  <div class='span8 offset2'>
    <table class='table table-bordered table-striped'>
      <tr>
        <td>Authorized Badge Issuers</td>
        <td><%= @stats['issuers'] %></td>
      </tr>
      <tr>
        <td>Badges Configured <a class="sub" href="/badges/public<%= "?this_org_only=1" if @stats_org %>">see earnable public badges</a></td>
        <td><%= @stats['badge_configs'] %></td>
      </tr>
      <tr>
        <td>Badge Placements</td>
        <td><%= @stats['badge_placement_configs'] %></td>
      </tr>
      <tr>
        <td>Badges Awarded <a class="sub" href="/badges/public/awarded<%= "?this_org_only=1" if @stats_org %>">see learner-shared badges</a></td>
        <td><%= @stats['badges'] %></td>
      </tr>
      <% unless @stats_org %>
        <tr>
          <td>Canvas Domains</td>
          <td><%= @stats['domains'] %></td>
        </tr>
        <tr>
          <td>
            Organizations
            <ul style="padding-top: 10px;">
              <% Organization.all.each do |org| %>
                <li><a href="<%= org.settings['url'] %>"><%= org.settings['name'] %></a> <a class="sub" href="<%= BadgeHelper.protocol %>://<%= org.host %>">badge site</a></li>
              <% end %>
              <li style="margin-top: 15px; font-size: 12px; list-style: none;">
                <a href="<%= BadgeHelper.issuer['owner_url'] %>">Contact us</a> to add your own badging site
              </li>
            </ul>
            
          </td>
          <td><%= @stats['organizations'] %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
